<Window x:Class="_5_3_Phonebook.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5_3_Phonebook"
        mc:Ignorable="d"
        Title="Edit" Height="200" Width="280">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
        <StackPanel Margin="0,0,0,20">
            <Label>Name</Label>
            <TextBox Width="250px" Name="Name_text"></TextBox>
        </StackPanel>

        <StackPanel Margin="0,0,0,20">
            <Label>Number</Label>
            <TextBox Width="250px" Name="Number_text"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            
            <Button Padding="5,1,5,1" x:Name="Save_bt" Click="Save_bt_Click"  Margin="0,0,50,0">Save</Button>
            <Button Padding="5,1,5,1" x:Name="Cancel_bt" Click="Cancel_bt_Click">Cancel</Button>
            
        </StackPanel>
    </StackPanel>
</Window>
