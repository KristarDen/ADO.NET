<Window x:Class="_5_2_GemsXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5_2_GemsXML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Open_Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Padding="5" Click="Open_Button_Click">Open XML file</Button>
            <ComboBox x:Name="Gems_Box" SelectionChanged="Gems_Box_SelectionChanged" MinWidth="380px" Margin="5" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></ComboBox>
        </StackPanel>
        <ListBox x:Name="Gems_List" MinHeight="370"></ListBox>
    </StackPanel>
</Window>
